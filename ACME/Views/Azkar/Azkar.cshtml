@section scripts{



    <script>

        $(document).ready(function () {

            $('#example1').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
            });

        });
        $("#btnAddazkar").click(function () {
                //showLoading();
            $("#azkaradmodelbody").load("/Azkar/AddAzkar", function (e) {
                $("#AddazkarModel").modal("show");
                    //hideLoading();
                });
        });

        function ConfirmToDelete(id) {
            $('#deleteLink').click(function () {
                window.location.href = "/Azkar/Azkar/";
            });
            $('#ConfirmModal').show();
        }

        function ViewEdit(ID) {
            //showLoading();
            var url = "/Azkar/AddAzkar?Id=" + 1;

            $("#azkaradmodelbody").load(url, function (e) {
                var id = $('#MAsjid_ID').val();
                if (id > 0) {
                    $('#btnsavemasjid').html("update ");
                }
                $("#AddazkarModel").modal("show");
                // hideLoading();
            });
        }
    </script>
}